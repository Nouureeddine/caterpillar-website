# Fiklar - Configuration d'environnement
# Copiez ce fichier en .env et personnalisez les valeurs

# Configuration Flask
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=fiklar-secret-key-change-in-production

# Configuration de la base de données
# SQLite (pour développement)
DATABASE_URL=sqlite:///fiklar.db

# MongoDB (alternative)
# MONGO_URI=mongodb://localhost:27017/fiklar
# MONGO_USERNAME=
# MONGO_PASSWORD=

# Configuration Email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=contact@fiklar.ma

# Informations de l'entreprise
COMPANY_NAME=Fiklar
COMPANY_EMAIL=contact@fiklar.ma
COMPANY_PHONE=+212 5 24 XX XX XX
COMPANY_WHATSAPP=+212600000000
COMPANY_ADDRESS=Marrakech, Maroc

# Configuration Redis (cache)
REDIS_URL=redis://localhost:6379/0

# Configuration de production
# Utilisez ces variables en production
PROD_SECRET_KEY=your-super-secret-production-key-here
PROD_DATABASE_URL=postgresql://user:password@localhost/fiklar
PROD_MAIL_SERVER=smtp.yourdomain.com
PROD_MAIL_USERNAME=noreply@fiklar.ma
PROD_MAIL_PASSWORD=your-production-mail-password

# APIs externes (optionnel)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
FACEBOOK_PAGE_ID=your-facebook-page-id
WHATSAPP_BUSINESS_NUMBER=212600000000

# Configuration de logging
LOG_LEVEL=INFO
LOG_FILE=logs/fiklar.log

# Configuration de sécurité
SESSION_TIMEOUT=3600
MAX_CONTENT_LENGTH=16777216  # 16MB max file upload
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png

# Configuration reCAPTCHA (pour les formulaires)
RECAPTCHA_PUBLIC_KEY=your-recaptcha-public-key
RECAPTCHA_PRIVATE_KEY=your-recaptcha-private-key

# Configuration des uploads
UPLOAD_FOLDER=static/uploads
MAX_FILE_SIZE=5242880  # 5MB en bytes